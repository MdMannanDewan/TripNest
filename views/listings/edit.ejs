<% layout('./layouts/boilerplate') -%>
<body>
  <div class="w-75 mx-auto">
    <h3 class="text-center">Edit this Listing</h3>
    <form action="/listings/<%=listing._id%>?_method=PUT" method="POST">
      <div class="mb-3">
        <label for="listing[title]" class="form-label">Title</label>
        <input
          class="form-control"
          type="text"
          name="listing[title]"
          placeholder="Enter title"
          value="<%=listing.title%>"
        />
      </div>
      <div class="mb-3">
        <label for="listing[description]" class="form-label">Description</label>
        <textarea
          class="form-control"
          type="text"
          name="listing[description]"
          placeholder="Enter description"
        >
<%=listing.description%></textarea
        >
      </div>

      <div class="mb-3">
        <label for="listing[image]" class="form-label">Image</label>
        <input
          class="form-control"
          type="text"
          name="listing[image]"
          placeholder="image url/Link"
          value="<%=listing.image%>"
        />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="listing[price]" class="form-label">Price</label>
          <input
            class="form-control"
            type="number"
            name="listing[price]"
            placeholder="1000"
            value="<%=listing.price%>"
          />
        </div>
        <div class="mb-3 col-md-8">
          <label for="listing[country]" class="form-label">Country</label>
          <input
            class="form-control"
            type="text"
            name="listing[country]"
            placeholder="Bangladesh"
            value="<%=listing.country%>"
          />
        </div>
      </div>
      <div class="mb-3">
        <label for="listing[location]" class="form-label">Location</label>
        <input
          class="form-control"
          type="text"
          name="listing[location]"
          placeholder="Mirpur,Dhaka"
          value="<%=listing.location%>"
        />
      </div>

      <div class="d-flex justify-content-center align-items-center mb-3">
        <button class="btn btn-dark edit-btn">Edit</button>
      </div>
    </form>
  </div>
</body>
